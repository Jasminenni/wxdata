/* pages/email/email.wxss */
.base{
  width: 100%;
  height: 100vh;
  background-color: rgb(138, 220, 245);
}
.tital{
  width: 100%;
  height: 15%;
  background-color: rgba(138, 220, 245, 0.425);
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.tital input{
  width: 80%;
  height: 60%;
  border-radius: 10rpx;
  background-color: rgb(255, 255, 255);
  border: 1px solid rgba(255, 204, 0, 0.575);
  font-size: 14px;
  padding-left: 20rpx;
}
.content{
  width: 100%;
  height: 70%;
  background-color: rgba(138, 220, 245, 0.705);

}
.content textarea{
  width: 90%;
  height: 95%;
  margin: auto;
  background: rgb(250, 249, 246);
  border: 1px solid rgba(255, 204, 0, 0.575);
  margin-top: 25rpx;
}
.foot{
   border-top: 1px solid #eee;
   padding-top: 25rpx;
}
.foot button{
  width: 98%;
}