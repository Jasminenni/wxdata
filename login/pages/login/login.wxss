/* pages/login/login.wxss */
.base{
  width: 100%;
  height: 100vh;
  background-color: rgb(248, 244, 180);
}
.nav{
  width: 100%;
  height: 358rpx;
}
.img{
  width: 100%;
  height: 100%;
}
.top{
  width: 100%;
  height: 350rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.top input{
  width: 600rpx;
  height: 100rpx;
  border: 1px solid paleturquoise;
  border-radius: 10rpx;
  padding-left: 20rpx;
  background-color: #fff;
  margin-top: 50rpx;
  
}
.code{
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #999;
  /* margin-bottom: 20rpx;  */
}
.code1{
  width: 300rpx;
  height: 100rpx;
  border: 1px solid paleturquoise;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  background-color: #fff;
}
.code2{
  width: 250rpx;
  height: 100rpx;
  border: 1px solid paleturquoise;
  border-radius: 10rpx;
  margin-top: 20rpx;
  background-color: #fff;
  margin-left:40rpx; 
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
  font-style: italic;
}
.foot{
  width: 100%;
  height: 270rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}
.submit{
  width: 100%;
  height: 90rpx;
  /* padding-left: 20rpx; */
  text-align: center;
  line-height: 90rpx;
}

.foot .zhuce{
  width: 100%;
  height: 70rpx;
  color: rgb(74, 32, 228);
  font-size: 14px;
  font-style: italic;
  text-decoration: underline;
   padding-left: 20rpx;}
.foot button{
  background-color:  rgba(236, 120, 25, 0.5);
  color: #fff;
  width: 100%;
  clear: both;
}
.foot button:hover{
  background-color:  rgb(236, 120, 25);
}